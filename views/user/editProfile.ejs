<%- include("../partials/header") -%> <%- include("../partials/categories-navbar") -%>

    <!-- Container -->
    <div class="container">

        <!-- Flash messages -->

        <% if(successMsg.length > 0 || errorMsg.length > 0) {%>
            <div class="row mt-3 mb-3">
                <div class="col-md-8 ">
                    <% if (successMsg.length > 0){ %>
                        <div id="success" class="alert alert-success">
                            <%= successMsg %>
                        </div>
                    <% } else { %>
                        <div id="success" class="d-none"></div>
                    <% } %>
                </div>
                <div class="col-md-8 m-auto">
                    <% if (errorMsg.length > 0) { %>
                        <div id="error" class="alert alert-danger">
                            <%= errorMsg %>
                        </div>
                    <% }  else { %>
                        <div id="error" class="d-none"></div>
                    <% } %>
                </div>
            </div>
        <% } %>

        <!-- Edit User -->
        <div class="row">
            <div class="col-md-8 m-auto">
                <div class="mt-3 text-center">
                    <h1 class="h4 text-gray-900 mb-4">Edit User</h1>
                    <% if(user.userImagePath){ %>
                      <img style="width: 100px; height: 100px !important;" class="rounded-circle mt-2" src="<%= user.userImagePath %>">
                    <% } %>
                </div>                  
                <div class="card">
                    <div class="card-body">                    
                        <form action="/user/updateUser" method="post" class="user" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="userImage">User Image</label><br>
                                <input type="file" name="userImage"><br>
                                
                            </div> 
                            <div class="form-group">                                        
                                    <input type="text" class="form-control form-control-user" name="name" value="<%= user.username %>">                                              
                            </div>

                            <div class="form-group">
                                <input type="email" class="form-control form-control-user" name="email" value="<%= user.email %>" readonly>
                            </div>

                            <div class="form-group">
                                <% if(user.address){ %>
                                <input type="text" name="address" class="form-control form-control-user" placeholder="Enter Address" value="<%= user.address %>">
                                <% } else{ %>
                                <input type="text" name="address" class="form-control form-control-user" placeholder="Enter Address">
                                <% } %>
                            </div>
                            
                            <div class="form-group">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button type="submit" name="updateId" value="<%= user._id %>" class="btn btn-primary btn-user btn-block">Update User</button>                            
                            </div>                        
                        </form>                            
                    </div>                        
                </div>
            </div>
        </div>        
        
    </div>
</div>

<%- include("../partials/footer") -%>