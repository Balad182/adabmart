<%- include('../header') -%>


<!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800"><%= pageName %></h1>        
    </div>
                    
<form action="/admin/products/createProduct" method="post" enctype="multipart/form-data">
    <div class="row">
        
        <div class="col-xl-8 col-lg-7">
            <div class="card shadow mb-4">
                
                <!-- Card Body -->
                <div class="card-body">
                    <div class="form-group">
                        <label for="productName">Product Name </label>
                        <input type="text" name="productName" class="form-control">                           
                    </div>

                    <div class="form-group">
                        <label for="productDescription">Product Description</label>
                        <textarea name="productDescription" id="" cols="30" rows="10" class="form-control"></textarea>
                    </div>

                        <!-- Product Image -->
                    <div class="form-group">
                        <label for="productImage">Product Image</label><br>
                        <input type="file" name="productImage">
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4">
                
                <!-- Card Body -->
                <div class="card-body">
                    <div class="form-group"> 
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">      
                        <input type="submit" name="createProduct" class="btn btn-primary btn-lg" value="Create Product">
                    </div>

                     <!-- Product Categories-->
                    <div class="form-group">
                         <label for="productCategory">Product Category</label>
                         <select name="productCategoryId" id="" class="form-control">
                            <option value="">Select Category</option>
                           <% if(categories){ %>
                              <% categories.forEach(function(category){ %>
                                 <option value="<%= category._id %>"><%= category.categoryName %></option> 
                              <% }) %>
                           <% } %>           
                        </select>
                    </div>    

                    <!-- Product Brands-->
                    <div class="form-group">
                        <label for="productManufacturer">Product Manufacturer</label>
                        <input type="text" name="productManufacturer" class="form-control">
                    </div>

                    <div class="form-group">
                        <label for="productQuantity">Product Quantity</label>
                        <input type="number" name="productQuantity" class="form-control">
                    </div>

                    <!-- Product Price -->
                    <div class="form-group">
                        <label for="productPrice">Product Price</label>
                        <input type="number" name="productPrice" class="form-control">                      
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<%- include('../footer') -%>