<%- include('../header') -%>


<!-- Page Heading -->
<!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800"><%= pageName %></h1>        
    </div>

        <!-- Flash messages -->
      <div class="row mt-3 mb-3">
        <div class="col-md-12 m-auto">
          <% if (successMsg.length > 0) { %>
          <div id="success" class="alert alert-success">
            <%= successMsg %>
          </div>
          <% } else { %>
          <div id="success" class="d-none"></div>
          <% } %>
        </div>
        <div class="col-md-12 m-auto">
          <% if (errorMsg.length > 0) { %>
          <div id="error" class="alert alert-danger">
            <%= errorMsg %>
          </div>
          <% } else { %>
          <div id="error" class="d-none"></div>
          <% } %>
        </div>
      </div>

<!-- Create User -->
<div class="card shadow mb-4">    
    <div class="card-body">        
        <div class="row">                    
            <div class="col-lg-7">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                    </div>
                    <form action="/admin/users/createUser" method="post" class="user"> 
                        <div class="form-group">                                        
                                <input type="text" class="form-control form-control-user" name="name" placeholder="Username">                                              
                        </div>

                        <div class="form-group">
                            <input type="email" class="form-control form-control-user" name="email" placeholder="Email Address">
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input type="password" class="form-control form-control-user" name="password" placeholder="Password">
                            </div>
                            <div class="col-sm-6">
                                <input type="password" class="form-control form-control-user" name="password2" id="password2" placeholder="Repeat Password">
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">                              
                            <input type="submit" name="createUser" class="btn btn-primary btn-user btn-block" value="Create User">
                        </div>                        
                    </form>                            
                </div>
            </div>
        </div>
    </div>
</div>
        
    
            


<%- include('../footer') -%>