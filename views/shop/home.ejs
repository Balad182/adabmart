<!-- Top Carousel -->
<div id="topCarousel" class="carousel slide mb-3 mt-0 pt-0" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#topCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#topCarousel" data-slide-to="1"></li>
        <li data-target="#topCarousel" data-slide-to="2"></li>
        <li data-target="#topCarousel" data-slide-to="3"></li>
        <li data-target="#topCarousel" data-slide-to="4"></li>
    </ol>
    <div class="carousel-inner">
        <% for(i=0; i<slideImgs.length; i++){ %>
            <% if(i==0){ %>
                <div class="carousel-item active">
                    <img class="d-block w-100" src="/images/<%= slideImgs[i] %>" alt="Slide" />
                </div>
            <% } else{ %>
                <div class="carousel-item">
                    <img class="d-block w-100" src="/images/<%= slideImgs[i] %>" alt="Slide" />
                </div>
            <% } %>
        <% } %>    
    </div>
    <a class="carousel-control-prev" href="#topCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#topCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<!-- Flash messages -->
<% if(successMsg.length > 0 || errorMsg.length > 0) {%>
    <div id="flash-msg" class="row mt-3 mb-3">
        <div class="col-md-12 m-auto">
            <% if (successMsg.length > 0){ %>
                <div id="success" class="alert alert-success text-center">
                    <%= successMsg %>
                </div>
            <% } else { %>
                <div id="success" class="d-none"></div>
            <% } %>
        </div>
        <div class="col-md-12 m-auto">
            <% if (errorMsg.length > 0) { %>
                <div id="error" class="alert alert-danger text-center">
                    <%= errorMsg %>
                </div>
            <% }  else { %>
                <div id="error" class="d-none"></div>
            <% } %>
        </div>
    </div>
<% } %>

<!-- Store's categories section -->
<div class="container">
    <h3 class="mb-3 mt-4">Featured Categories</h3>
    <% if (categories) { %>
        <div class="row text-center m-auto">
            <% for(let i=0; i<categories.length; i++){ %>
                <div class="col-lg-2 col-md-2 col-sm-12 text-center ml-3">
                    <a class="title-link" href="/products/<%=categories[i].slug%>">
                        <img src="images/<%=categories[i].slug%>.png" alt="category" class="circle-img"/>
                        <h4 class="mb-3 mt-3 centered"><%=categories[i].categoryName%></h4>
                    </a>
                </div>
            <%} %>    
        </div>
    <%}%>
</div>

<hr class="gradient-style" />

<!-- Latest products slider -->
<div class="container mb-4 mt-4">
    <!--Carousel Wrapper-->
    <div id="products-carousel" class="carousel slide carousel-multi-item" data-ride="carousel">
        <!--Controls-->
        <div class="controls-top mb-2">
            <div class="row">
                <div class="col-8">
                    <h3>Latest Products</h3>
                </div>
                <div class="col-4">
                    <div class="controls float-right hidden-xs">
                        <a class="left btn btn" href="#products-carousel" data-slide="prev">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                        <a class="right btn" href="#products-carousel" data-slide="next">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <!--/.Controls-->


        <!--Slides-->
        <div class="carousel-inner" role="listbox">
            <!--First slide-->
            <div class="carousel-item active">
                <div class="row">
                    <% for(let i=0; i<4; i++) { %>          
                        <div class="col-md-3 col-sm-6 product-index-box">
                            <div class="single-product d-flex flex-column h-100">
                                <a class="title-link"
                                href="/products/<%=products[i].productName%>/<%=products[i]._id%>">
                                    <img src="<%= products[i].productImagePath %>"
                                    alt="<%=products[i].productCategory.slug%>" class="img-fluid"/>
                                </a>
                                <div class="product-info">
                                    <a class="title-link"
                                    href="/products/<%=products[i].productName%>/<%=products[i]._id%>">
                                        <h6 class="mt-2 mb-2"><%= products[i].productName %></h6>
                                    </a>
                                    <div class="price">AED<%= products[i].productPrice %></div>
                                </div>
                                <% if(products[i].available) {%>
                                    <a href="/add-to-cart/<%=products[i]._id%>"
                                    class="btn btn-block btn-info btn-user mt-auto mb-2">
                                        Add to Cart
                                    </a>
                                <% } else { %>
                                    <a href="#" class="btn btn-block btn-danger button-style-danger mt-2 mb-2">
                                        Out of Stock
                                    </a>
                                <%} %>
                            </div>
                        </div>
                    <%}%>
                </div>
            </div>
            <!--/.First slide-->

            <!--Second slide-->
            <div class="carousel-item">
                <div class="row">
                    <% for(let i=4; i<8; i++) { %>
                        <div class="col-md-3 col-sm-6 product-index-box">
                            <div class="single-product d-flex flex-column h-100">
                                <a class="title-link"
                                href="/products/<%=products[i].productName%>/<%=products[i]._id%>">
                                    <img src="<%= products[i].productImagePath %>"
                                    alt="<%=products[i].productCategory.slug%>" class="img-fluid"/>
                                </a>
                                <div class="product-info">
                                    <a class="title-link"
                                    href="/products/<%=products[i].productName%>/<%=products[i]._id%>">
                                        <h6 class="mt-2 mb-2"><%= products[i].productName %></h6>
                                    </a>
                                    <div class="price">AED<%= products[i].productPrice %></div>
                                </div>
                                <% if(products[i].available) {%>
                                    <a href="/add-to-cart/<%=products[i]._id%>"
                                    class="btn btn-block btn-info button-style mt-auto mb-2">
                                        Add to Cart
                                    </a>
                                <% } else { %>
                                    <a href="#" class="btn btn-block btn-danger button-style-danger mt-2 mb-2">
                                        Out of Stock
                                    </a>
                                <%} %>
                            </div>
                        </div>
                    <%}%>
                </div>
            </div>
            <!--/.Second slide-->

            <!--Third slide-->
            <div class="carousel-item">
                <div class="row">
                    <% for(let i=8; i<12; i++) { %>
                        <div class="col-md-3 col-sm-6 product-index-box">
                            <div class="single-product d-flex flex-column h-100">
                                <a class="title-link"
                                href="/products/<%=products[i].productName%>/<%=products[i]._id%>">
                                    <img src="<%= products[i].productImagePath %>"
                                    alt="<%=products[i].productCategory.slug%>" class="img-fluid"/>
                                </a>
                                <div class="product-info">
                                    <a class="title-link"
                                    href="/products/<%=products[i].productName%>/<%=products[i]._id%>">
                                        <h6 class="mt-2 mb-2"><%= products[i].productName %></h6>
                                    </a>
                                    <div class="price">AED<%= products[i].productPrice %></div>
                                </div>
                                <% if(products[i].available) {%>
                                    <a href="/add-to-cart/<%=products[i]._id%>"
                                    class="btn btn-block btn-info button-style mt-auto mb-2">
                                        Add to Cart
                                    </a>
                                <% } else { %>
                                    <a href="#" class="btn btn-block btn-danger button-style-danger mt-2 mb-2">
                                        Out of Stock
                                    </a>
                                <%} %>
                            </div>
                        </div>
                    <%}%>
                </div>
            </div>
            <!--/.Third slide-->
        </div>
        <!--/.Slides-->
    </div>
    <!--/.Carousel Wrapper-->

</div>
<!-- .container ends -->

<hr class="gradient-style" />

    <div class="container my-4">
        <% for(i=0; i<categories.length; i++){ %>
            <% var n = 0; %>
            <div class="row col-8">
                <h3><%= categories[i].categoryName %></h3>
            </div>
            <div class="row">            
                <% for(var a=0; a<products.length; a++){ %>                    
                    <% if(products[a].productCategory.slug == categories[i].slug){ %>
                        <% n++; %>
                        <% if(n<=4){ %>
                            <div class="col-md-3 col-sm-6 product-index-box">
                                <div class="single-product d-flex flex-column h-100">
                                    <a class="title-link"
                                    href="/products/<%=products[a].productName%>/<%=products[a]._id%>">
                                        <img src="<%= products[a].productImagePath %>" alt="<%= products[a].productName %>" class="img-fluid"/>
                                    </a>
                                    <div class="product-info">
                                        <a class="title-link"
                                        href="/products/<%=products[a].productName%>/<%=products[a]._id%>">
                                            <h6 class="mt-2 mb-2"><%= products[a].productName %></h6>
                                        </a>
                                        <div class="price">AED <%= products[a].productPrice %></div>
                                    </div>
                                    <% if(products[a].available) {%>
                                        <a href="/add-to-cart/<%=products[a]._id%>"
                                        class="btn btn-block btn-info button-style mt-auto mb-2">
                                            Add to Cart
                                        </a>
                                    <% } else { %>
                                        <a href="#"
                                        class="btn btn-block btn-danger button-style-danger mt-2 mb-2">
                                            Out of Stock
                                        </a>
                                    <%} %>
                                </div>
                            </div>
                        <% } %>
                    <% } %>                
                <% } %> 
            </div>
            <hr class="gradient-style" />
        <% } %>
    </div>


<div class="newsletter">    
    <div class="row">
        <div class="col-md-12 col-12 text-center heading">
            <h2 class="mt-3"><strong>Newsletter</strong></h2>
            <p class="text-secondary">Subscribe to receive coupons and gift cards.</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 pb-5 offset-md-2 col-12 text-center">
            <form method='post' action="/pages/newsletter">
                <div class="input-group">
                    <input type="email" name="email" class="form-control rounded-0" placeholder="Enter email address">
                    <span class="form-group-btn">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>" id="csrf" />
                        <button class="btn btn-danger px-4" type="submit">Subscribe</button>
                    </span>  
                </div>
            </form>
        </div>
    </div>
</div>
