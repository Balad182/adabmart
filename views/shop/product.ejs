<%- include("../partials/header") -%> <%- include("../partials/categories-navbar") -%>
<div class="container">
    <!-- Flash messages -->
    <% if(successMsg.length > 0 || errorMsg.length > 0) {%>
        <div id="flash-msg" class="row mt-3 mb-3">
            <div class="col-md-12 m-auto">
                <% if (successMsg.length > 0){ %>
                    <div id="success" class="alert alert-success">
                        <%= successMsg %>
                    </div>
                <% } else { %>
                    <div id="success" class="d-none"></div>
                <% } %>
            </div>
            <div class="col-md-12 m-auto">
                <% if (errorMsg.length > 0) { %>
                    <div id="error" class="alert alert-danger">
                        <%= errorMsg %>
                    </div>
                <% }  else { %>
                    <div id="error" class="d-none"></div>
                <% } %>
            </div>
        </div>
    <% } %>
  
    <!-- Product info -->
    <div class="row mt-4 mb-4">
        <div class="col-md-4 mt-2 mr-2 ml-auto">
            <img src="<%=product.productImagePath%>"
            class="img-fluid product-img w-100"
            alt="product image"/>
        </div>
        <div class="col-md-5 mt-2 mb-2 ml-2 mr-auto text-dark">
            <h2><%=product.productName%></h2>
            <hr />
            <p class="price">AED <%=product.productPrice%></p>
            <p class="lead"> Description: 
                <p><%=product.productDescription%></p>
            </p>
      
            <p><strong>Category:</strong> <%=product.productCategory.categoryName%></p>
            <p><strong>Brand: </strong><%=product.productManufacturer%></p>
            <p><strong>Product code:</strong> <%=product.productCode%></p>
            <p><strong>Date added to the store:</strong> <%= moment(product.createdAt).format( 'MMMM Do YYYY')%></p>
            <% if(product.available) {%>
                <p class="is-available text-center">In stock</p>
                <a href="/add-to-cart/<%=product._id%>" class="btn btn-block btn-info mt-3 mb-3 button-style">
                    Add to Cart
                </a>
            <% } else { %>
                <p class="is-not-available text-center">Out of Stock</p>
            <%} %>
        </div>
    </div>
</div>
</div>
<%- include("../partials/footer") -%>
