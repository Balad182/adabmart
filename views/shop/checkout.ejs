<%- include("../partials/header") -%> <%- include("../partials/categories-navbar") -%>
<div class="container mt-4 mb-5">
    <!-- Flash messages -->
    <div class="row mt-3 mb-3">
        <div class="col-md-8 m-auto">
            <% if (errorMsg.length>0) { %>
                <div id="error" class="alert alert-danger">
                    <%= errorMsg %>
                </div>
            <% } else { %>
                <div id="error" class="alert alert-danger d-none"></div>
            <% } %>
        </div>
    </div>
  


    <!-- Checkout Form -->
    
    <div class="card shadow">    
        <div class="card-body">        
            <div class="row">                    
                <div class="col-lg-7 m-auto">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Checkout Form</h1>
                        </div>
                        <form action="/checkout" id="checkout-form" method="POST" class="user">                            
                            <div class="form-group text-center">
                                <h1 class="h4 text-gray-900 mb-4"><%= currentUser.username %></h1>                                
                                <% if(currentUser.userImagePath){ %>
                                  <img class="rounded-circle" width="50" src="<%= currentUser.userImagePath %>">
                                <% } else{ %>
                                <i class="fas fa-user fa-3x"></i>
                                <% } %> 
                            </div> 
                            <div class="form-group">
                                <label for="card-name">Card Holder Name</label>
                                <input type="text" id="card-name" class="form-control form-control-user" required />                                                   
                            </div>

                            <div class="form-group">
                                <label for="address">Address</label>
                                <% if(currentUser.address){ %>
                                <input type="text" id="address" class="form-control form-control-user" value="<%= currentUser.address %>" required name="address"/>
                                <% } else{ %>
                                <input type="text" id="address" class="form-control form-control-user" required name="address"/>
                                <% } %>
                            </div>

                            <div class="form-group">                
                                <label for="card-element">Card Information</label>
                                <!-- A Stripe Element will be inserted here. -->
                                <div id="card-element" class="StripeElement"></div>
                                <!-- Used to display form errors. -->
                                <div id="card-errors" role="alert" class="text-danger mb-3"></div>
                            </div>                             
                        
                            
                            <div class="form-group">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                                <button id="submit-btn" type="submit" class="btn btn-danger btn-user btn-block"> Buy now </button>                                                             
                            </div>                        
                        </form>                            
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<script type="text/javascript" src="https://js.stripe.com/v3/"></script>
<script type="text/javascript" src="/js/checkout.js"></script>
</div>
<%- include("../partials/footer") -%>
